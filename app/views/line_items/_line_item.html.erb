
<tr class="table_product_row">

  <td class="table_product_img">
     <%= image_tag(line_item.product.image_url_cart_small, :class => "table_icon") %>
  </td>
  <td class="table_product_name">
    <% if line_item.quantity > 1 %>
        <%= line_item.quantity %>&times;
    <% else %>
        <% end %>
    <%= line_item.product.rus_title %>
  </td>
  <td class="table_product_price">
    <%= line_item.product.price %>
  </td>
</tr>


