<div class="products index">
  <h2>Букеты</h2>

  <%= link_to("Добавить новый букет", new_product_path, :class => 'action new') %><br/><br/>

  <table class="listing" summary="product list">
    <tr class="header">
      <th>#</th>
      <th>Букет</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Image url</th>
      <th>Image Url Cart</th>
      <th>Image Url Cart Small</th>
      <th>Actions</th>
    </tr>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.rus_title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.image_url %></td>
      <td><%= product.image_url_cart %></td>
      <td><%= product.image_url_cart_small %></td>
      <td class="actions">
        <%= link_to("Show", product_path(product), :class => 'action show') %>
        <%= link_to("Edit", edit_product_path(product), :class => 'action edit') %>
        <%= link_to("Delete", delete_product_path(product), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
